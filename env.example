# ERPNext MCP Server Environment Variables
# Copy this file to .env and fill in your values
# Usage: cp env.example .env

# ERPNext Connection (Required)
ERPNEXT_BASE_URL=http://localhost:8000
ERPNEXT_API_KEY=your_api_key_here
ERPNEXT_API_SECRET=your_api_secret_here

# LLM Provider Configuration - Generic and Simple!
# Just set: provider_type, base_url, api_key, and model

# Provider type: "openai-compatible" (default), "anthropic", or "azure"
LLM_PROVIDER_TYPE=openai-compatible

# Generic LLM configuration (works for ANY provider)
LLM_BASE_URL=http://ollama:11434/v1
LLM_API_KEY=
LLM_MODEL=llama3.2:1b

# Azure-specific (only if provider_type is "azure")
#LLM_AZURE_DEPLOYMENT=gpt-4
#LLM_AZURE_API_VERSION=2024-02-01

# ===== Examples - Just change these 3-4 variables: =====
#
# Ollama (local, free):
# LLM_BASE_URL=http://ollama:11434/v1
# LLM_API_KEY=
# LLM_MODEL=llama3.2:1b
#
# OpenAI:
# LLM_BASE_URL=https://api.openai.com/v1
# LLM_API_KEY=sk-proj-...
# LLM_MODEL=gpt-4o-mini
#
# Together.ai:
# LLM_BASE_URL=https://api.together.xyz/v1
# LLM_API_KEY=...
# LLM_MODEL=meta-llama/Meta-Llama-3.1-70B-Instruct-Turbo
#
# Groq:
# LLM_BASE_URL=https://api.groq.com/openai/v1
# LLM_API_KEY=gsk_...
# LLM_MODEL=llama-3.1-70b-versatile
#
# OpenRouter:
# LLM_BASE_URL=https://openrouter.ai/api/v1
# LLM_API_KEY=sk-or-...
# LLM_MODEL=anthropic/claude-3.5-sonnet
#
# Anthropic (different API):
# LLM_PROVIDER_TYPE=anthropic
# LLM_BASE_URL=https://api.anthropic.com/v1
# LLM_API_KEY=sk-ant-...
# LLM_MODEL=claude-3-5-sonnet-20241022
#
# Azure OpenAI:
# LLM_PROVIDER_TYPE=azure
# LLM_BASE_URL=https://your-resource.openai.azure.com
# LLM_API_KEY=...
# LLM_MODEL=gpt-4
# LLM_AZURE_DEPLOYMENT=gpt-4
# LLM_AZURE_API_VERSION=2024-02-01

# Server Ports
MCP_PORT=8080
OLLAMA_PORT=11434
WEBUI_PORT=3000
ERPNEXT_PORT=8000

# Open WebUI Configuration
WEBUI_SECRET_KEY=your-secret-key-change-this
ENABLE_SIGNUP=true

# ERPNext Local Instance (only if using full-stack profile)
ERPNEXT_ADMIN_PASSWORD=admin
ERPNEXT_DEV_MODE=1

# Logging
LOG_LEVEL=info

